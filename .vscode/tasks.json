{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C Main build",
            "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-g",
                "${workspaceRoot}\\src\\*.c",
                "-o",
                "${workspaceRoot}\\Debug\\enigma.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "cppbuild",
            "label": "C Tests build",
            "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-g",
                "${workspaceRoot}\\src\\enigma.c",
                "${workspaceRoot}\\test\\*.c",
                "-o",
                "${workspaceRoot}\\TestsDebug\\enigmatests.exe",
                "-lcunit"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ],
    "version": "2.0.0"
}